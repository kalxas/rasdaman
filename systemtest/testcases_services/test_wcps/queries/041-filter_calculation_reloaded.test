for c in (test_mr) return encode((unsigned char)
  coverage filteredImage
    over $px x(1:10),
         $py y(1:10)
    values
        sqrt(abs(
          condense +
          over $kx x(-1:1),
               $ky y(-1:1)
          using
               ((((double)coverage kernel
                          over $x x(-1:1),
                               $y y(-1:1)
                          value list < -1; 0; 1; -2; 0; 2;-1; 0; 1 >)[x($kx),y($ky)])
                                      *(c[i($px+$kx),j($py+$ky)])/(8*5.13712275))
            ))
, "png", "nodata=0")
