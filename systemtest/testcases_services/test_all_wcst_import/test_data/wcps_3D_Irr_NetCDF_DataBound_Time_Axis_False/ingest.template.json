{
  "config": {
    "service_url": "PETASCOPE_URL",
    "tmp_directory": "/tmp/",
    "crs_resolver": "SECORE_URL/",
    "default_crs": "SECORE_URL/OGC/0/Index2D",
    "automated": true,
    "track_files": false,
    "subset_correction": false,
    "insitu" : false,
    "mock": false
  },
  "input": {
    "coverage_id": "test_netcdf_irr_1",
    "paths": [
      "*.nc"
    ]
  },
  "recipe": {
    "name": "general_coverage",
    "options": {
      "coverage": {
        "crs": "OGC/0/AnsiDate@EPSG/0/4326",
        "metadata": {
          "type": "xml",
          "global": {
            "Title": "'This is a test coverage'"
          }
        },
        "slicer": {
          "type": "netcdf",
	  "pixelIsPoint": true,
          "bands": [
            {
              "name": "LAI",
              "variable": "LAI",
              "description": "Leaf Area Index",
              "nilReason": "The nil value represents an error in the sensor.",
	      "nilValue": "-9999",
              "identifier": "LAI"
            }
          ],
          "axes": {
            "ansi": {
              "min": "datetime(regex_extract('${file:name}', '(.+?)(Z.+)', 1), 'YYYY-MM-DDTHH:mm:ss.SSS')",
              "directPositions": "[datetime(regex_extract('${file:name}', '(.+?)(Z.+)', 1), 'YYYY-MM-DDTHH:mm:ss.SSS')]",
              "gridOrder": 0,
              "type": "ansidate",
              "irregular": true,
	      "dataBound": false
            },
          "Long": {
              "min": "${netcdf:variable:lon:min}",
              "max": "${netcdf:variable:lon:max}",
              "gridOrder": 2,
              "resolution": "0.00277777"
            },
            "Lat": {
              "min": "${netcdf:variable:lat:min}",
              "max": "${netcdf:variable:lat:max}",
              "gridOrder": 1,
              "resolution": "-0.00277777"
            }
          }
        }
      },
        "tiling": "ALIGNED [0:0, 0:1023, 0:1023]"
     }
    }
}
