{
  "config": {
	"service_url": "PETASCOPE_URL",
    "tmp_directory": "/tmp/",
    "mock": false,
    "automated": true,
    "track_files": false
  },
  "input": {
    "coverage_id": "test_wcs_general_recipe_gdal_auto_metadata_tiff_tags",
    "paths": [
      "*.tiff"
    ]
  },
  "recipe": {
    "name": "general_coverage",
    "options": {
        "coverage": {
          "crs": "EPSG/0/4326",
          "metadata": {
            "type": "xml",
            "global": "auto",
             "local": {
                  "local_metadata_key": "${gdal:metadata:TIFFTAG_DOCUMENTNAME}"
              }
          },
          "slicer": {
            "type": "gdal",

            "axes": {

              "Long": {
                "min": "${gdal:minX}",
                "max": "${gdal:maxX}",
                "gridOrder": 0,
                "resolution": "${gdal:resolutionX}"
              },
              "Lat": {
                "min": "${gdal:minY}",
                "max": "${gdal:maxY}",
                "gridOrder": 1,
                "resolution": "${gdal:resolutionY}"
              }
          }
        }      
      },
      "tiling": "ALIGNED [0:366, 0:500]"
    }
  }
}
