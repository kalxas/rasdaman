{
  "config": {
	"service_url": "PETASCOPE_URL",
        "tmp_directory": "/tmp/",
    "mock": false,
    "automated": true,
    "track_files": false,
    "subset_correction": false
  },
  "input": {
    "coverage_id": "test_color_palette_rasql_ready_encoded_png",
    "paths": [
      "*.tif"
    ]
  },
  "recipe": {
    "name": "general_coverage",
    "options": {
        "coverage": {
          "crs": "EPSG/0/4326",
          "metadata": {
            "type": "json",
            "global": {
              "Title": "'Drought code'"
         	  },
             "colorPaletteTable": "color_palette_table_rasql_READY.cpt"
          },
          "slicer": {
            "type": "gdal",
	    "pixelIsPoint": true,
            "bands": [
              {
	    "name": "Gray",
	    "identifier": "0"
              }
            ],
            "axes": {
              "Lat": {
		      "min": "${gdal:minY}",
		      "max": "${gdal:maxY}",
		      "resolution": "${gdal:resolutionY}"
              },
              "Long": {
		      "min": "${gdal:minX}",
		      "max": "${gdal:maxX}",
		       "resolution": "${gdal:resolutionX}"
              }
          }
        }      
      },
      "tiling": "ALIGNED [0:366, 0:500, 0:500, 0:10]",
      "wms_import": true
    }
  }
}
