                                                        "min": {
                                                           "type": "string"
                                                        },
                                                        "max": {
                                                           "type": "string"
                                                        },
                                                        "resolution": {
                                                            "type": [ "number", "string" ]
                                                        },
                                                        "gridOrder": {
                                                            "type": "number"
                                                        },
                                                        "crsOrder": {
                                                            "type": "number"
                                                        },
                                                        "irregular": {
                                                            "type": [ "boolean", "string" ]
                                                        },
                                                        "regular": {
                                                            "type": [ "boolean", "string" ]
                                                        },
                                                        "statements": {
                                                            "type": "string"
                                                        },
                                                        "directPositions": {
                                                            "type": "string"
                                                        },
                                                        "dataBound": {
                                                            "type": [ "boolean", "string" ]
                                                        },
                                                        "sliceGroupSize": {
                                                            "type": "number"
                                                        },
                                                        "type": {
                                                            "type": "string"
                                                        },
                                                        "crs_origin": {
                                                            "type": "string"
                                                        }
